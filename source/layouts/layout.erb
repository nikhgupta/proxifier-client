<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta name="description" content="" />
    <meta name="author" content="" />

    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-touch-fullscreen" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">
    <link rel="apple-touch-icon" href="icons/60.png">
    <link rel="apple-touch-icon" sizes="76x76" href="icons/76.png">
    <link rel="apple-touch-icon" sizes="120x120" href="icons/120.png">
    <link rel="apple-touch-icon" sizes="152x152" href="icons/152.png">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag :app %>
    <!--[if lte IE 9]> <%= stylesheet_link_tag :ie9 %> <![endif]-->
    <script type="text/javascript"> window.onload = function() { if (navigator.appVersion.indexOf("Windows NT 6.2") != -1) document.head.innerHTML += '<%= stylesheet_link_tag "windows.chrome.fix" %>' } </script>
  </head>

  <body class="fixed-header <%= page_classes %>">
    <%= partial "layouts/sidebar" %>

    <div class="page-container">
      <%= partial "layouts/header" %>
      <div class="page-content-wrapper">

        <div class="content">
          <%= yield %>
        </div>

        <%= partial "layouts/footer" %>
      </div>
    </div>

    <%= partial "layouts/quickview" %>
    <%= partial "layouts/search" %>

    <script src="//code.jquery.com/jquery-3.1.1.min.js" type="text/javascript"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <%= javascript_include_tag :app %>
  </body>
</html>
